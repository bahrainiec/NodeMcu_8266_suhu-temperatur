#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>
#include <WiFiClientSecure.h>
#include <DHT.h>
#include <UrlEncode.h>

// === Konfigurasi Sensor DHT ===
#define DHTPIN D5         // Pin DHT terhubung ke D5
#define DHTTYPE DHT11     // Ganti jadi DHT22 jika pakai sensor DHT22
DHT dht(DHTPIN, DHTTYPE);

// === Konfigurasi WiFi ===
const char* ssid = "Warkop tgk nadi";       // Nama WiFi kamu
const char* password = "Bacelona"; // Password WiFi kamu

// === Konfigurasi Bot Telegram ===
String BOT_TOKEN = "7657025376:AAExYmoNIIdzbBauVGA3tZ19ilNYFfN4U4M"; // Token bot dari @BotFather
String CHAT_ID = "7007348071"; // ID Chat (bisa user atau group)

unsigned long lastSend = 0;
const long interval = 30000; // Kirim data setiap 30 detik

void sendMessage(String message) {
  if (WiFi.status() == WL_CONNECTED) {
    WiFiClientSecure *client = new WiFiClientSecure;
    client->setInsecure(); // Abaikan verifikasi SSL (hanya untuk pengujian)

    HTTPClient https;

    String url = "https://api.telegram.org/bot";
    url += BOT_TOKEN;
    url += "/sendMessage?chat_id=";
    url += CHAT_ID;
    url += "&text=" + urlEncode(message);

    Serial.println("ğŸ“¡ Mengirim ke URL: " + url); // Debugging

    if (https.begin(*client, url)) { // Mulai request HTTPS
      int httpResponseCode = https.GET();

      if (httpResponseCode > 0) {
        Serial.print("HTTP Response Code: ");
        Serial.println(httpResponseCode);

        String response = https.getString();
        Serial.println("ğŸŒ Server Response: " + response);

        if (httpResponseCode == HTTP_CODE_OK) {
          Serial.println("âœ… Pesan berhasil dikirim ke Telegram!");
        } else {
          Serial.println("âŒ Gagal mengirim pesan.");
        }
      } else {
        Serial.println("ğŸ“¡ Error pada HTTP request: " + String(https.errorToString(httpResponseCode)));
      }

      https.end();
    } else {
      Serial.println("ğŸ”Œ Gagal terhubung ke server.");
    }

    delete client;
  } else {
    Serial.println("ğŸ”’ WiFi tidak terhubung!");
  }
}

void setup() {
  Serial.begin(9600);
  dht.begin();

  // Koneksi ke WiFi
  WiFi.begin(ssid, password);
  Serial.println("ğŸ”„ Menghubungkan ke WiFi...");

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nğŸ”— Terhubung ke WiFi!");
  Serial.print("ğŸ“ IP Address: ");
  Serial.println(WiFi.localIP());

  // Kirim pesan selamat datang
  sendMessage("Sistem Monitoring Suhu & Kelembapan siap via Telegram!");
  delay(5000); // Tunggu sebentar agar pesan pertama sampai
}

void loop() {
  // Jika WiFi terputus, coba reconnect
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("ğŸ“¶ Reconnecting to WiFi...");
    WiFi.reconnect();
    delay(5000);
    return;
  }

  // Kirim data setiap interval waktu
  if (millis() - lastSend >= interval) {
    float hum = dht.readHumidity();
    float temp = dht.readTemperature();

    // Validasi pembacaan sensor
    if (isnan(hum) || isnan(temp)) {
      Serial.println("ğŸ›‘ Gagal membaca data dari sensor DHT!");
      return;
    }

    // Tampilkan data di Serial Monitor
    Serial.print("ğŸŒ¡ Suhu: ");
    Serial.print(temp);
    Serial.print(" *C | ğŸ’§ Kelembapan: ");
    Serial.print(hum);
    Serial.println(" %");

    // Buat pesan
    String pesan = "ğŸŒ¤ Monitoring IoT\n";
    pesan += "Suhu: " + String(temp, 2) + " *C\n";
    pesan += "Kelembapan: " + String(hum, 2) + " %";

    sendMessage(pesan);

    lastSend = millis(); // Reset timer
  }
}
